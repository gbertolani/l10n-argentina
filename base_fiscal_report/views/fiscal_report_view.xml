<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View for account.fiscal.report.config-->
        <record id="view_account_fiscal_report_config_form" model="ir.ui.view">
            <field name="name">account.fiscal.report.form</field>
            <field name="model">account.fiscal.report.config</field>
            <field name="type">form</field>
            <field name="priority" eval="14" />
            <field name="arch" type="xml">
                <form string="Fiscal Report Config" create="false" delete="false">
                    <sheet>
                        <h1 style="width: 100%%">
                            <field name="name" class="oe_inline" style="width: 100%% !important"/>
                        </h1>
                        <group name="config">
                            <group>
                                <field name="report_type"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_account_fiscal_report_config_tree" model="ir.ui.view">
            <field name="name">account.fiscal.report.config.tree</field>
            <field name="model">account.fiscal.report.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Report Config"
                    create="false" delete="false">
                    <field name="name"/>
                    <field name="report_type"/>
                </tree>
            </field>
        </record>

        <!-- Form View for account.fiscal.report.files-->
        <record id="view_account_fiscal_report_files_form" model="ir.ui.view">
            <field name="name">account.fiscal.report.files.form</field>
            <field name="model">account.fiscal.report.files</field>
            <field name="arch" type="xml">
                <form string="Fiscal Report Files"
                    create="false" delete="false">
                    <header>
                       <field name="state" widget="statusbar" statusbar_visible="new,error,presented"/>
                    </header>
                    <sheet>
                        <h1 style="width: 100%%">
                            <field name="name" class="oe_inline" style="width: 100%% !important"/>
                        </h1>
                        <group>
                            <group>
                                <field name="report_config_id" select="1"/>
                            </group>
                            <group>
                                <field name="period_id" select="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_fiscal_report_files_tree" model="ir.ui.view">
            <field name="name">account.fiscal.report.files.tree</field>
            <field name="model">account.fiscal.report.files</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Report Files"
                    create="false" delete="false">
                    <field name="name"/>
                    <field name="period_id"/>
                    <field name="report_config_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_fiscal_report_config">
            <field name="name">Report Config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.fiscal.report.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_fiscal_report_files">
            <field name="name">Report Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.fiscal.report.files</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
